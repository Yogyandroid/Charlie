<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="charlie.fastorder.com.fastorder.Login"
    tools:showIn="@layout/activity_login">

    <LinearLayout
        android:id="@+id/form_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/masuk"
            android:textColor="@color/hitam" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/frmuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/form_judul"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/txtuser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:layout_weight="1"
            android:text="@string/user"
            android:textColor="@color/hitam"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edituser"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:hint="@string/user"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/frmpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frmuser"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/txtpass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="@string/pass"
            android:textColor="@color/hitam"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/editpass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:hint="@string/pass"
            android:inputType="textPassword"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frmpass"
        android:orientation="horizontal">

        <ImageButton

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/loginfacebook"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/logingoogleplus"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frmpass"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnmsk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Masuk" />

        <Button
            android:id="@+id/btndfr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Daftar" />
    </LinearLayout>
</LinearLayout>
